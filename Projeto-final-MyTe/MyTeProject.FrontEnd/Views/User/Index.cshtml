@{
    ViewData["Title"] = "MyTE User Management";
    ViewData["Header"] = "Admin";
}

@model IEnumerable<UserModel>

<div class="full-container">
    


    <div class="content-container">

        <h2 class="ms-5">MyTE - User Management</h2>
        <br />
        <div class="row">
            <div class="accordion accordion-flush col-10" id="accordionFilters">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed btn btn-orange-light" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                            Filters
                        </button>
                    </h2>
                    <div id="flush-collapseOne" class="accordion-collapse collapse bg-light" data-bs-parent="#accordionFilters">
                        <div class="accordion-body">
                            <form>
                                <div class="d-flex justify-content-between">
                                    <div class="mx-2">
                                        <label for="Id">Id</label>
                                        <input id="Id" type="text" for="Id" class="form-control" placeholder="Id:" />

                                    </div>

                                    <div class="mx-2">
                                        <label for="Name">Name</label>
                                        <input id="Name" type="text" for="Name" class="form-control" placeholder="Name:" />

                                    </div>
                                    <div class="mx-2">
                                        <label for="Department">Department</label>
                                        <input id="Department" type="text" for="Department" class="form-control" placeholder="Department:" />

                                    </div>
                                    <div class="mx-2">
                                        <label for="Role">Role</label>
                                        <input id="Role" type="text" for="Role" class="form-control" placeholder="Role:" />

                                    </div>
                                </div>
                                <br />
                                <div class="d-flex justify-content-evenly">
                                    <button class="btn btn-outline-orange-light btn-thin">Clean</button>
                                    <button class="btn btn-orange-light btn-thin">Filter</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col">
                <a class="add-button btn btn-orange w-100" asp-controller="User" asp-action="Create">Add</a>
            </div>
        </div>
        <br />
        <div class="table-container">
            <table class="table table-striped">
                <thead>
                <th>Id</th>
                <th>Name</th>
                <th>E-mail</th>
                <th>State</th>
                <th>Position</th>
                <th>Department</th>
                <th>Role</th>
                <th>Admission Date</th>
                <th>Actions</th>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        string modalId = "DeleteUser" + user.Id;
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>@user.Location</td>
                            <td>@user.HiringRegime</td>
                            <td>@user.Department</td>
                            <td>@user.Role</td>
                            <td>@user.AdmissionDate.ToShortDateString()</td>
                            <td>
                                <div class="actions-container">
                                    <a class="edit-button" asp-controller="User" asp-action="Update" asp-route-id="@user.Id">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <form asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">
                                        <button type="button" class="delete-button" data-bs-toggle="modal" data-bs-target="#@modalId">
                                            <i class="bi bi-trash3"></i>
                                        </button>

                                        <div id="@modalId" class="modal fade" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title fs-5">Attention!</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Do you really want to exclude this @user.Name User?</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-outline-orange" data-bs-dismiss="modal">Close</button>
                                                        <button type="submit" class="btn btn-orange">Confirm</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>



                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

    <div class="footer-container">
    </div>




</div>



