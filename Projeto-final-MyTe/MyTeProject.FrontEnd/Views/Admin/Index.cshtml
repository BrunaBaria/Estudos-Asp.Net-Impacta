@*
*@
@{
    ViewData["Header"] = "Admin";
}

<section id="home-admin">

    <h1>MyTe - Administration</h1>
    @if (ViewBag.User?.Role == EnumRole.Admin)
    {
        <div class="d-flex justify-content-between pt-5">
            <a class="btn btn-orange-light" asp-controller="User" asp-action="Index">User Management</a>
            <a class="btn btn-orange-light" asp-controller="Department" asp-action="Index">Department Management</a>
        </div>

        <div class="d-flex justify-content-between pt-5">
            <a class="btn btn-orange-light" asp-controller="WBS" asp-action="Index">WBS Management</a>
            <a class="btn btn-orange-light" asp-controller="Location" asp-action="Index">Location Management</a>
        </div>
    }
    @if (ViewBag.User?.Role == EnumRole.Admin || ViewBag.User?.Role == EnumRole.Manager)
    {
        <div class="d-flex justify-content-between pt-5">
            <a class="btn btn-orange-light" asp-controller="UserNavigation" asp-action="Index">MyTe</a>
            <a class="btn btn-orange-light" asp-controller="Manager" asp-action="GetReport">Reports</a>
        </div>
    }
</section>
