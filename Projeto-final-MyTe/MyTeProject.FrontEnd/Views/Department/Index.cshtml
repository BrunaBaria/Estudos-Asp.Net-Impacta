@{
    ViewData["Title"] = "MyTE Department Management";
    ViewData["Header"] = "Admin";
}

@model IEnumerable<DepartmentModel>

<div class="full-container">



    <div class="content-container">

        <h2 class="ms-5">MyTE - Department Management</h2>
        <br />
        <div class="row">
            <div class="accordion accordion-flush col-10" id="accordionFilters">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed btn btn-orange-light" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                            Filters
                        </button>
                    </h2>
                    <div id="flush-collapseOne" class="accordion-collapse collapse bg-light" data-bs-parent="#accordionFilters">
                        <div class="accordion-body">
                            <form asp-action="Index">
                                <div class="d-flex justify-content-evenly">
                                    <div class="form-group">
                                        <label for="Id">Id</label>
                                        <input id="Id" type="text" for="Id" name="Id" class="form-control" placeholder="Id:" />

                                    </div>


                                    <div class="form-group">
                                        <label for="Name">Department</label>
                                        <input id="Department" type="text" for="Name" name="Name" class="form-control" placeholder="Department:" />

                                    </div>

                                </div>
                                <br />
                                <div class="d-flex justify-content-evenly">
                                    <button class="btn btn-orange-light btn-thin">Filter</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col">
                <a class="add-button btn btn-orange w-100" asp-controller="Department" asp-action="Create">Add</a>
            </div>
        </div>
        <br />
        <div class="table-container">
            <table class="table table-striped">
                <thead>
                <th class="col-2">Id</th>
                <th class="col">Department</th>
                <th class="col">Email</th>
                <th class="col">Actions</th>
                </thead>
                <tbody>
                    @foreach (DepartmentModel department in Model)
                    {
                        string modalId = "DeleteDepartment" + department.Id;
                        <tr>
                            <td>@department.Id</td>
                            <td>@department.Name</td>
                            <td>@department.ContactEmail</td>
                            <td>
                                <div class="actions-container">
                                    <a class="edit-button" asp-controller="Department" asp-action="Update" asp-route-id="@department.Id">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <form asp-controller="Department" asp-action="Delete" asp-route-id="@department.Id">
                                        <button type="button" class="delete-button" data-bs-toggle="modal" data-bs-target="#@modalId">
                                            <i class="bi bi-trash3"></i>
                                        </button>

                                        <div id="@modalId" class="modal fade" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title fs-5">Attention!</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Do you really want to exclude this @department.Name Department?</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-outline-orange" data-bs-dismiss="modal">Close</button>
                                                        <button type="submit" class="btn btn-orange">Confirm</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>



                                    </form>
                                </div>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>

        </div>

    </div>

    <div class="footer-container">
    </div>

</div>


