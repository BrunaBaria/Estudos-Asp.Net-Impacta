@*
   definir a "comunicação" entre view e model
*@

@model Login

@{
    ViewData["Title"] = "Login";

}

@* definir a estrutura html necessária*@

<h3 class="bg-info text-white">@ViewData["Title"]</h3>

<form asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl"/> <!-- hidden: Envia informações ocultas -->

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="email" asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Senha</label>
        <input type="password" asp-for="Password" class="form-control"/>
        <span asp-validation-for="Password"></span>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Acessar</button>
</form>
